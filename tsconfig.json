{
  "compilerOptions": {
    "target": "es6",                  
    "module": "commonjs",
    "moduleResolution": "node",                                
    "rootDir": "./src",                            
    "outDir": "./dist",                          
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true                                
  }
}
